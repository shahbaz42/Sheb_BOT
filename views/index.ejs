<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>ðŸ¤–Shah_BOT!</title>
    <style>
        body {
            background-color: #fff;
        }

        .chat_container {
            background-color: #fff;
            max-width: 480px;
            height: 100vh;
            margin: 0 auto;
            padding: 18px;
            position: relative;
            -webkit-box-shadow: -2px 10px 49px -13px rgba(0, 0, 0, 0.25);
            -moz-box-shadow: -2px 10px 49px -13px rgba(0, 0, 0, 0.25);
            box-shadow: -2px 10px 49px -13px rgba(0, 0, 0, 0.25);
        }

        .chat_header {
            background-color: #fff;
            padding: 10px;
            border-bottom: 1px solid #e5e5e5;
            position: relative;
            z-index: 1;
        }

        .chat_messages {
            height: calc(100vh - 190px);
            overflow-y: scroll;
        }

        .chat_response {
            bottom: 10px;
            left: 5%;
            position: absolute;
            width: 90%;
        }

        .form-control:focus {
            border-color: #343a40;
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0), 0 0 8px rgba(0, 0, 0, 0);
        }

        .msg_box {
            display: inline-block;
            border: 3px solid #343a40;
            border-radius: 0;
            padding: 10px;
            margin-bottom: 10px;
            width: 70%;
        }

        .send_btn {
            display: inline-block;
            border: 3px solid #343a40;
            float: right;
            border-radius: 0;
            padding: 10px;
            width: 28%;
        }

    </style>
</head>

<body>
    <div class="chat_container">

        <div class="chat_header">
            <h2>ðŸ¤– Shah_BOT </h2>
        </div>
        <br>

        <div id="chat_messages" class="chat_messages">
            <p>
                <%- message %>
            </p>
        </div>

        <div class="chat_response">
            <form action="/" method="post">
                <span>
                    <input class="form-control msg_box " type="text" name="reply" />
                </span>
                <span>
                    <input class="btn btn-outline-dark send_btn" type="submit" value="Send Reply" />
                </span>
            </form>
        </div>

    </div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
    <script>
        var elem = document.getElementById('chat_messages');
        elem.scrollTop = elem.scrollHeight;
    </script>
</body>

</html>